<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/md_orange_500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/dark_gray"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImages"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/viewPagerImages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:selectedDotColor="@color/md_orange_500"
            app:dotsSize="8dp"
            app:dotsSpacing="6dp"
            app:dotsCornerRadius="4dp" />


        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/md_orange_500"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/tvDescription"
            app:layout_constraintTop_toBottomOf="@id/dotsIndicator"
            android:layout_marginTop="16dp"/>


        <TextView
            android:id="@+id/btnAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_cart"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            android:layout_marginStart="8dp" />

        <LinearLayout
            android:id="@+id/quantityContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="@string/minus_symbol"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@color/colorPrimary" />

            <EditText
                android:id="@+id/etQuantity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:layout_marginHorizontal="4dp"
                android:maxLines="1"
                android:importantForAccessibility="yes" />

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="@string/plus_symbol"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@color/colorPrimary" />
        </LinearLayout>

        <View
            android:id="@+id/specDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvSpecificationsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/specifications"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/specDivider"
            android:layout_marginStart="8dp"/>


        <TableLayout
            android:id="@+id/specificationsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvSpecificationsTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
